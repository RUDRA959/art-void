---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from 'astro:content';
import ArtGallery from '../components/ArtGallery.astro';
import { fetchArtworks, urlFor } from '../lib/sanity';
const artItems = await getCollection('art');
const sanityArtworks = await fetchArtworks();

// Merge Sanity artworks with existing artItems
const transformedSanityArtworks = sanityArtworks.map((art: any) => ({
  data: {
    name: art.title,
    heroImage: art.image ? urlFor(art.image).url() : '',
    medium: art.medium || 'Mixed Media',
    year: art.year || new Date().getFullYear(),
    month: art.month || new Date().getMonth() + 1,
    dimensions: art.dimensions || '',
    text: art.description || ''
  }
}));

const allArtworks = [...artItems, ...transformedSanityArtworks];

function slugify(str: string): string {
  return str ? str.toLowerCase().replace(/\s+/g, '-') : '';
}
const selectedMedium = 'All';
const mediums = Array.from(new Set(allArtworks.map(a => a.data.medium).filter(Boolean)));
mediums.unshift('All');

// short by 20 most recent
allArtworks.sort((a, b) => {
  if (a.data.year !== b.data.year) return b.data.year - a.data.year;
  return b.data.month - a.data.month;
});
allArtworks.splice(20);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="w-full max-w-screen-md mx-auto my-4 dark:bg-neutral-800 dark:text-neutral-300 transition-colors duration-300" >
    <Header />
    <main class="flex flex-col justify-center">
      <!-- Hero Section -->
      <section class="min-h-screen flex flex-col items-center px-4 md:px-0 py-0">
        <div class="w-full max-w-2xl mx-auto flex flex-col gap-8 items-center text-center">
          <div class="space-y-4">
            <h1 class="text-5xl md:text-7xl font-bold leading-tight">
              Creative <span class="bg-gradient-to-r from-blue-500 to-purple-500 bg-clip-text text-transparent">Artistry</span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-700 dark:text-neutral-300">
              Exploring visual expression through unique and compelling artwork
            </p>
          </div>
          
          <p class="text-base md:text-lg text-gray-600 dark:text-neutral-400 leading-relaxed max-w-xl">
            Welcome to my creative portfolio. Discover a curated collection of artwork spanning multiple mediums and styles. Each piece tells a story, reflecting my artistic journey and passion for visual storytelling.
          </p>
          
          <a href="/art" class="inline-block px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors duration-200">
            Explore My Work
          </a>
        </div>
      </section>

      <!-- Featured Image -->
      <div class="w-full flex flex-col items-center gap-2.5 px-4 lg:px-0 mt-6 mb-16">
        <img
          src="/placeholder-about.jpg"
          alt="Featured artwork"
          class="rounded-lg shadow-lg w-full max-w-2xl"
        />
        
        <p class="italic text-xs text-gray-600 dark:text-neutral-400">
         Photo by <a href="https://unsplash.com/@kharaoke?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Khara Woods</a> on <a href="https://unsplash.com/photos/assorted-color-paint-brush-on-brown-wooden-table-top-KR84RpMCb0w?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Unsplash</a>
        </p>
      </div>

      <!-- Gallery Section -->
      <div class="px-4 md:px-0 mt-10">
      <section class="mb-8">
        <h2 class="text-3xl font-bold mb-4">Most recent art</h2>
        <ul class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {mediums.map(m => (
            <li>
              <a href={slugify(m) === 'all' ? '/art' : `/art/${slugify(m)}`}
                class={`block p-3 rounded bg-gray-100 dark:bg-neutral-700 hover:bg-gray-200 dark:hover:bg-neutral-600 transition${selectedMedium === m ? ' ring-2 ring-blue-500' : ''}`}>
                {m}
              </a>
            </li>
          ))}
        </ul>
      </section>
      <ArtGallery artItems={allArtworks} />
    </div>
        </main>
    <Footer />
  </body>
</html>

