import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import { getCollection } from 'astro:content';
import ArtGallery from '../components/ArtGallery.astro';
import { fetchArtworks, urlFor } from '../lib/sanity';

export const prerender = false;

const artItems = await getCollection('art');
const sanityArtworks = await fetchArtworks();

// Merge Sanity artworks with existing artItems
const transformedSanityArtworks = sanityArtworks.map((art: any) => ({
  data: {
    name: art.title,
    heroImage: art.image ? urlFor(art.image).url() : '',
    medium: art.medium || 'Mixed Media',
    year: art.year || new Date().getFullYear(),
    month: art.month || new Date().getMonth() + 1,
    dimensions: art.dimensions || '',
    text: art.description || ''
  }
}));

const allArtworks = [...artItems, ...transformedSanityArtworks];

const mediums = Array.from(new Set(allArtworks.map(a => a.data.medium).filter(Boolean)));
mediums.unshift('All');

const url = new URL(Astro.request.url, Astro.site);
const mediumParam = url.searchParams.get('medium');
const selectedMedium = mediumParam && mediumParam.trim() !== '' ? mediumParam : 'All';
function slugify(str: string): string {
  return str.toLowerCase().replace(/\s+/g, '-');
}

// Filter artworks by selected medium (case-insensitive comparison)
const filteredArt = selectedMedium === 'All' 
  ? allArtworks 
  : allArtworks.filter(art => slugify(art.data.medium) === mediumParam);

filteredArt.sort((a, b) => {
  if (a.data.year !== b.data.year) return b.data.year - a.data.year;
  return b.data.month - a.data.month;
});
---

<html lang="en">
    <head>
        <BaseHead title="Artist Name Art | Gallery" description="Browse original works by a London-based artist across oil, watercolor, line, and more." />
    </head>
    <body class="w-full max-w-screen-md mx-auto my-4 dark:bg-neutral-800 dark:text-neutral-300 transition-colors duration-300">
        <Header />
        <main class="flex flex-col gap-8 px-4 md:px-0">
        <section class="mb-8">
        <h1 class="text-3xl font-bold mb-4">Art Categories</h1>
        <ul class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {mediums.map(m => (
            <li>
              <a href={slugify(m) === 'all' ? '/art' : `/art/${slugify(m)}`}
                class={`block p-3 rounded bg-gray-100 dark:bg-neutral-700 hover:bg-gray-200 dark:hover:bg-neutral-600 transition${selectedMedium === m ? ' ring-2 ring-blue-500' : ''}`}>
                {m}
                </a>
            </li>
            ))}
        </ul>
        </section>
        <ArtGallery artItems={filteredArt} />
    </main>
    <Footer />
    </body> 
</html>

